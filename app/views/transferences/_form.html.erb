<div class="m-2 p-3">
  <h3>Make a transfer to other user: </h3>
</div>

<div class="m-2 p-3">
  <%= form_with model: @transference, url: transferences_path(user_id: @user), method: :post do |form| %>
  <div>
    <%= form.label :amount, class: "form-label" %>
    <%= form.number_field :amount, required: true, class: "form-control" %>      
  </div>
  <div>
    <%= form.label :username, class: "form-label" %>
    <%= form.text_field :username, required: true, class: "form-control" %>      
  </div>
  <div class="mt-3">
    <%= form.submit class:"btn btn-sm btn-success" %>
  </div>
<% end %>
</div>

